<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="5dp"
       app:cardElevation="8dp"
       android:layout_margin="8dp"
    android:layout_marginRight="2dp"
    android:layout_weight="1"
    app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/fault_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_image_80"></ImageView>

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_marginStart="125dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="2dp">

                <TextView
                    android:id="@+id/fault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="35dp"
                    android:paddingStart="30dp"
                    android:paddingTop="5dp"
                    android:text="FAULT"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fault_descipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fault"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="35dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="Description"
                    android:autoSizeMaxTextSize="1dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/fault_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fault_descipt"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="35dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="Location"
                    android:autoSizeMaxTextSize="1dp"
                    android:textSize="15dp"

                    android:textStyle="normal" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnfault1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:onClick="Button" />


    </androidx.cardview.widget.CardView>
